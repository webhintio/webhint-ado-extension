    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Task",
            "program": "${workspaceFolder}/dist/${fileBasenameNoExtension}.js",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "env": {
                "INPUT_URL": "https://webhint.io"
            },
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "webpacked task",
            "program": "${workspaceFolder}/dist/task/execute-webhint.js",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "env": {
                "INPUT_URL": "https://webhint.io",
                "system.debug": "true"
            },
            "console": "integratedTerminal"
        }
    ]
}
